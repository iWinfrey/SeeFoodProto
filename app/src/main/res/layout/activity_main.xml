<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@android:color/white">

    <!--button to open the camera-->
    <Button
            android:text="📷"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/open_camera_btn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent" android:fadingEdge="none|horizontal"/>

    <!--button to open the gallery picker-->
    <Button
            android:text="🖼️"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/open_gallery_btn" android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/open_history_btn"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/open_camera_btn"
            android:layout_marginStart="8dp" android:fadingEdge="none|horizontal"/>

    <!--button to open the history-->
    <Button
            android:text="🕒"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/open_history_btn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="36dp"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent" android:fadingEdge="none|horizontal"/>
    <ImageView
            android:layout_width="305dp"
            android:layout_height="337dp" app:srcCompat="@drawable/logo"
            android:id="@+id/image" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.227" app:layout_constraintHorizontal_bias="0.555"/>
    <Button
            android:text="Fade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fadebtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:onClick="fade"
    />
    <Button
            android:text="Change Pic"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:id="@+id/chPic" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:onClick="changeImage"
    />
    <TextView
            android:text="Take Picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCamera" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/open_camera_btn"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="Upload Picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvGallery"
            app:layout_constraintBottom_toTopOf="@+id/open_gallery_btn" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toStartOf="@+id/tvHistory" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toEndOf="@+id/tvCamera"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.54"/>
    <TextView
            android:text="View History"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvHistory"
            app:layout_constraintBottom_toTopOf="@+id/open_history_btn" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"/>
</android.support.constraint.ConstraintLayout>